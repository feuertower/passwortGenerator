<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle">
    <corners android:radius="14dp"/>

    <size
        android:height="60dp"
        android:width="150dp"
        />

    <stroke
        android:width="2dp"
        android:color="@color/colorButtonStroke"
        />

    <padding
        android:bottom="2dp"
        android:left="2dp"
        android:right="2dp"
        android:top="2dp"
        />

    <solid android:color="@color/colorButtonBackground" />

    <gradient
        android:startColor="@color/colorButtonBackground"
        android:centerColor="@color/colorButtonBackground"
        android:endColor="@color/colorButtonAccent"
        android:angle="-90"
        android:type="linear"
        />

</shape>

